<Window x:Class="WpfApp_FramePegging.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_FramePegging"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <DockPanel>
        <!-- Top buttons -->
        
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="AliceBlue">
            <Button x:Name="btnBack" Content="Back" Height="20" Width="50" Margin="10" Click="btnBack_Click"></Button>
            <Button x:Name="btnForward" Content="Forward" Height="20" Width="50" Margin="10" Click="btnForward_Click"></Button>
            
        </StackPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <Button x:Name="p1" Content="Page3" Click="p1_Click" Margin="5" Height="50"/>
            <Button x:Name="p2" Content="Page4" Click="p2_Click" Margin="5" Height="50"/>
        </StackPanel>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Window>
