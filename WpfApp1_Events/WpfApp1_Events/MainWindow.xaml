<Window x:Class="WpfApp1_Events.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1_Events"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <ScrollViewer>
        <StackPanel>
            <TextBlock
                x:Name="txtblock"
                Text="Namaste World!"
                FontSize="16"
                Foreground="red"
                Background="blue"
                Margin="0,0,0,20"
                MouseEnter="txtblock_MouseEnter"
                MouseLeave="txtblock_MouseLeave" />
            <Label
                x:Name="lblname"
                Content="Name : "
                FontSize="16"
                Foreground="Blue"
                Background="black"
                Margin="0,0,0,20"
                MouseDown="lblname_MouseDown"
                
                
                
                />
            <TextBox
                x:Name="txtbox"
                Text="type here..."
                Width="300"
                Height="50"
                Margin="0,0,0,15"
                TextChanged="txtbox_TextChanged"
                PreviewTextInput="txtbox_PreviewTextInput"
                GotFocus="txtbox_GotFocus"
                LostFocus="txtbox_LostFocus"
                />
            <PasswordBox
                x:Name="pwdInput"
                Height="50"
                Width="300"
                Margin="0,0,0,15"
                PasswordChanged="pwdInput_PasswordChanged"
                GotFocus="pwdInput_GotFocus"
                LostFocus="pwdInput_LostFocus"
              />
            <Button
                Name="btnSubmit"
                Content="Submit"
                Height="20"
                Width="60"
                Margin="20"
                Click="btnSubmit_Click"
                MouseEnter="btnSubmit_MouseEnter"
                MouseLeave="btnSubmit_MouseLeave"
                />

            <StackPanel Orientation="Horizontal">
                <RadioButton 
                    Name="rbOption1"
                    Content="Male"
                    GroupName="Gender"
                    IsChecked="True"
                     
                    Checked="rbOption1_Checked"
                    Margin="0,0, 20, 0"
                 />
                <RadioButton
                    Name="rbOption2"
                    Content="Female"
                    GroupName="Gender"
                    Checked="rbOption2_Checked"
                    />  
            </StackPanel>
            <CheckBox
                x:Name="chkAccept"
                Content="I accept the term"
                Margin="0,20,0,0"
                Checked="chkAccept_Checked"
                Unchecked="chkAccept_Unchecked"
                IsThreeState="True"
                Indeterminate="chkAccept_Indeterminate"
                
             />
            <Image Name="imgLogo"
                   Width="150"
                   Height="100"
                   Stretch="Uniform"
                   Source="C:\Users\MaharshiJB\OneDrive\Desktop\download (1).jpeg"
                   Margin="0,0,0,15"
                   MouseEnter="imgLogo_MouseEnter"
                   MouseLeftButtonDown="imgLogo_MouseLeftButtonDown"
                   />
            <Slider x:Name="sldVolumn"
                    Minimum="0"
                    Maximum="100"
                    Value="50"
                    Width="300"
                    Margin="0,0,0,15"
                    ValueChanged="sldVolumn_ValueChanged"
                    Thumb.DragStarted="sldVolumn_DragStarted"
                    Thumb.DragCompleted="sldVolumn_DragCompleted"
                    />
            <Calendar
                Name="cldEvent"
                SelectedDate="2025-01-01"
                Margin="0,0,0,15"
                SelectedDatesChanged="cldEvent_SelectedDatesChanged"
                DisplayDateChanged="cldEvent_DisplayDateChanged"
                
                />
            <DatePicker
                x:Name="dpSelectedDate"
                SelectedDate="2025-08-27"
                Margin="0,0,0,15"
                SelectedDateChanged="dpSelectedDate_SelectedDateChanged"
                CalendarOpened="dpSelectedDate_CalendarOpened"
                CalendarClosed="dpSelectedDate_CalendarClosed"
                />
        </StackPanel>
    </ScrollViewer>
</Window>
