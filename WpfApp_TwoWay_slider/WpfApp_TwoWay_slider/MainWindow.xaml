<Window x:Class="WpfApp_TwoWay_slider.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_TwoWay_slider"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Slider Value="{Binding S,UpdateSourceTrigger=PropertyChanged}" Minimum="0" Maximum="100">
        </Slider>
        <TextBox Text="{Binding S, UpdateSourceTrigger=PropertyChanged}"/>
    </StackPanel>
</Window>
